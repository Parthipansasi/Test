@model IEnumerable<Catagorytask.Models.AllCatagory_Table1>
<!DOCTYPE html>
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <style>
        
        .avatar {
            vertical-align: middle;
            width: 30px;
            height: 30px;
            border-radius: 50%;
        }
        
    </style>
</head>


<body style="background-color: #7aff0024">



    <div class="row">
        <div class="col-sm-9 sidebar-brand-wrapper d-none d-lg-flex align-items-center justify-content-center fixed-top" style="height:130px;">
            <a class="sidebar-brand brand-logo" href="index.html"><img src="~/assets/1-Copy_d7534fef7eb89724e7bf030f7d2946fd.png" alt="logo" style="width: 200px; margin-left: 50px; margin-top: 15px" /></a>

        </div>
        <div class=" col-sm-3 navbar-header">
            <a class="sidebar-brand brand-logo" href="index.html"><img src="~/images1.png" alt="Avatar" class="avatar"></a>
            Welcome


            @if (!string.IsNullOrEmpty(HttpContext.Current.User.Identity.Name))
            {
                <b>@HttpContext.Current.User.Identity.Name</b>

            }
            <br />
            <ul class="nav navbar-nav navbar-left">
                <li><a onclick="PopupForm('@Url.Action("register","Home")')"><span class="glyphicon glyphicon-user" ></span> Sign Up</a></li>
                <li><a href="@Url.Action("Logout", "Login")"><span class="glyphicon glyphicon-log-in"></span> Logout</a></li>
            </ul>
        </div>


        <div class=" col-sm-" id="myNavbar">


        </div>
    </div>

    <div class="main" style=" background: 100%;">
        <div class="row">

            <div class="col-md-10" style=" margin-left: 100px;">
                <div class="column">
                    <div class="col-sm-12 container-fluid">


                        <fieldset>
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 form-group">
                                    <div class="modal-section-header">

                                    </div>
                                </div>

                                <div class="col-sm-4">
                                    
                                    @using (Html.BeginForm("ExportToExcel", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                    {
                                        <div>
                                            <input type="submit" style="margin-bottom:10px" value="Export" class="btn btn-default" />
                                        </div>

                                    }
                                    <a class="btn btn-default" style="margin-bottom:10px" onclick="PopupForm('@Url.Action("Add","Home")')" accesskey="q"><i class="fa fa-plus"></i>Add new</a>
                                </div>

                                <div class="col-sm-8">

                                    @using (Html.BeginForm("ImportFromExcel", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                    {
                                        @Html.ValidationSummary();
                                        <input type="file" style=" margin-bottom:10px;margin-left:400px;" name="postedFile" />

                                        <input type="submit" style=" margin-bottom: 10px; margin-left: 400px;" button id="upload" value="Import" class="btn btn-success" /><i class="fa-solid fa-download"></i>

                                    }
                                </div>


                            </div>
                        </fieldset>
                    </div>
                    <div class="col-sm-12">
                        <table id="AllCatagory_Table1" class="table table-striped table-bordered">

                            <thead>
                                <tr>
                                    <th style="position: sticky">Sno</th>
                                    <th>Catagory</th>
                                    <th>Name</th>
                                    <th>Quantity</th>
                                    <th>Created_on</th>
                                    <th>Created_by</th>
                                    <th>Updated_on</th>
                                    <th>Updated_by</th>
                                    <th>Price</th>
                                    <th>Status</th>
                                    <th></th>

                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <td>Sno</td>
                                    <td>Catagory</td>
                                    <td>Name</td>
                                    <td>Quantity</td>
                                    <td>Created_on</td>
                                    <td>Created_by</td>
                                    <td>Updated_on</td>
                                    <td>Updated_by</td>
                                    <td>Price</td>
                                    <td>Status</td>
                                    <td style="visibility:hidden;"></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <link href="//cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" rel="stylesheet" />
        <link rel="stylesheet" type="text/css" href="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css" />


        @section scripts{
            <script src="//cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
            <script>
        var Popup, dataTable;
        $(document).ready(function () {
            dataTable = $('#AllCatagory_Table1').DataTable(
                {
                    initComplete: function () {
                        this.api()
                            .columns()
                            .every(function () {
                                var column = this;
                                var select = $('<select style="width: 100%"><option value=""></option></select>')
                                    .appendTo($(column.footer()).empty())
                                    .on('change', function () {
                                        var val = $.fn.dataTable.util.escapeRegex($(this).val());

                                        column.search(val ? '^' + val + '$' : '', true, false).draw();
                                    });

                                column
                                    .data()
                                    .unique()
                                    .sort()
                                    .each(function (d, j) {
                                        select.append('<option value="' + d + '">' + d + '</option>');
                                    });

                            });
                    },
                    "ajax": {
                        "url": "/Home/Getlist",
                        "type": "GET",
                        "datatype": "json"

                    },

                    "columns": [
                        { "data": "Sno" },
                        { "data": "Catagory" },
                        { "data": "Name" },
                        { "data": "Quantity" },
                        {
                            'data': 'Created_on',
                            'render': function (jsonDate) {
                                var date = new Date(parseInt(jsonDate.substr(6)));
                                var month = ("0" + (date.getMonth() + 1)).slice(-2);
                                return ("0" + date.getDate()).slice(-2) + '-' + month + '-' + date.getFullYear();
                            }
                        },
                        { "data": "Created_by" },
                        {
                            'data': 'Updated_on',
                            'render': function (jsonDate) {
                                var date = new Date(parseInt(jsonDate.substr(6)));
                                var month = ("0" + (date.getMonth() + 1)).slice(-2);
                                return ("0" + date.getDate()).slice(-2) + '-' + month + '-' + date.getFullYear();
                            }
                        },
                        { "data": "Updated_by" },
                        { "data": "Price" },
                        { "data": "Status_report" },
                        {
                            "data": "Id", "render": function (data) {
                                return "<a class='btn btn-default btn-sm' onclick=PopupForm('@Url.Action("Delete", "Home")/" + data + "')><i class='fa fa-pencil'></i>Delete</a><a class='btn btn-default btn-sm' onclick=PopupForm('@Url.Action("Edit","Home")/" + data + "')><i class='fa fa-pencil'></i>Edit</a>";
                            },
                            "orderable": false,
                            "width": "150px"
                        }
                    ],
                        "language": {
                            "emptyTable" : "No data Found please click on <b>Add New</b> button"
                        }

                });
        });
        function PopupForm(url) {
            var formDiv = $('<div/>');
            $.get(url)
                .done(function (response) {
                    formDiv.html(response);

                    Popup = formDiv.dialog({
                        autoOpen: true,
                        resizable: false,
                        title: 'Fill Details',
                        height: 590,
                        width: 700,
                        top:550,

                        close: function () {
                            Popup.dialog('destroy').remove();
                        }
                    });

                });
        }
        function SubmitForm(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $.ajax({
                    type: "post",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        if (data.success) {
                            Popup.dialog('close');
                            dataTable.ajax.reload();
                            $.notify(data.message, {
                                globalPosition: "top center",
                                className: "success"
                            })
                        }
                    }
                });
            }
            return false;
        }
               
            </script>
        }
    </div>
</body>
